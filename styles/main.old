@import normalize
@import util
@import fonts

salmon = #F79983
tart = #5B5268
yellow = #FFF000
purple = #BB4B9B
grey = #383738

section
  width 100%
  display inline-block

// temporary for sizing
.container
  top 0
  left 0
  width 100%

body
  font-smooting()
  background tart

// fullscreen modal

#modal-container.fullscreen
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  text-align center
  background black

#modal-row.fullscreen
  height 100%

#modal-img.fullscreen
  height 100%
  display inline-block
  vertical-align middle
  padding-bottom 1.1em

// normal modal

#modal-container.normal
  display none

#modal-row.normal
  height auto

#modal-img.normal
  height auto

// headline

.headline
  width 100%
  margin 0
  text-align center
  background salmon
  margin 2.5rem 0

.headline img
  width 100%

// home

#home .headline
  margin -2em 0

#home .character
  text-align center

// food

#food header
  text-align center

#food .headline img
  width 100%
  padding 0 2em
  margin -2.0em 

#food img
  margin -3rem 0

#food img.flip
  -moz-transform scaleX(-1)
  -o-transform scaleX(-1)
  -webkit-transform scaleX(-1)
  transform scaleX(-1)
  filter  FlipH
  -ms-filter "FlipH"

#food  h1
    color yellow
    font-size 4em
    font-face bold

// about

#about
  text-align center

#about h1, h2, h3
  color yellow

#about #past 
  margin-top -3em
  width 100%

.recap-video
  display inline-block
  background black
  opacity(0.5)

.maps #two
  padding 6em 0 4em 0
  display none

.maps #big
  width 100%
  height auto

// sponsors

#sponsors
  font-family courier, san-serif
  text-transform uppercase

#sponsors li
  width 100%
  background white

#sponsors li img
  width 100%

#hendrick
  display none

