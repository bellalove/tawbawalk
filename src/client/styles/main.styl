@import normalize
@import util

body
  font-smooting()

// fullscreen modal

#modal-container.fullscreen
  position absolute
  width 100%
  height 100%
  text-align center
  background black

#modal-row.fullscreen
  height 100%
  display block

#modal-img.fullscreen
  height 100%
  display inline-block
  vertical-align middle
  padding-bottom 1.1em

// normal modal

#modal-row.normal
  height auto

#modal-img.normal
  height auto
